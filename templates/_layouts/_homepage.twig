{% extends "_layouts/_nav-footer-cta.twig" %}
{% import "_macros/_general.twig" as general  %}

{% block main %}

    <section class="hero container">
        <div>
            {% set hero = entry.contentRepeater|filter(block => block.title == "hero")|first %}

            <span>{{ hero.heroHeadingSmall }}</span>
            <h1>{{ hero.heroHeading }}</h1>
            <div class="hero__links">
            {% for heroLink in hero.heroLinks %}
                {{ general.link(heroLink.href, "_self", heroLink.href.label, heroLink.linkVariant) }}
            {% endfor %}
            </div>

        </div>
        <div>
            <img src="{{ hero.heroImage.one().url }}" alt="{{ hero.heroImage.title }}">
        </div>
    </section>


    <section>
        {% set pageHeader = craft.entries().section('homepage').type("projectPage").all() %}
{{ dump(pageHeader) }}

    </section>



{% endblock %}